@model UpdateDiscountDto
@{
	ViewData["Title"] = "UpdateDiscount";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirim Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" asp-for="DiscountId" />
								<label for="DiscountTitle">İndirimlü Ürün Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountTitle" id="DiscountTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="DiscountAmount">İndirim Oranı Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountAmount" id="DiscountAmount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="DiscountImageUrl">Görselin Url'ini' Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountImageUrl" id="DiscountImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="DiscountDescription">Açıklamayı Giriniz</label>
								<input type="text" class="form-control" asp-for="DiscountDescription" id="DiscountDescription">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İndirimli Ürün Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


