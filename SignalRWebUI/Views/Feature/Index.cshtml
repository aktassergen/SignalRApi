@model List<ResultFeatureDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Öne Çıkan Alan ile ilgili işlemleri aşağıdan gerçekçekleştirebilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">1. Başlık</th>
									<th scope="col">2. Başlık</th>
									<th scope="col">3. Başlık</th>
									<th scope="col">1. Açıklama</th>
									<th scope="col">2. Açıklama</th>
									<th scope="col">3. Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureId</td>
										<td>@item.FeatureTitle1</td>
										<td>@item.FeatureTitle2</td>
										<td>@item.FeatureTitle3</td>
										<td>@item.FeatureDescription1</td>
										<td>@item.FeatureDescription2</td>
										<td>@item.FeatureDescription3</td>
										<td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Feature/CreateFeature/" class="btn btn-outline-primary">Yeni Öne Çıkan Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>
