@model List<ResultSosialMediaDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemleri aşağıdan gerçekçekleştirebilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Link</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.SocialTitle</td>
										<td>@item.SocialUrl</td>
										<td><a href="/SosialMedia/DeleteSosialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/SosialMedia/UpdateSosialMedia/@item.SocialMediaId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/SosialMedia/CreateSosialMedia/" class="btn btn-outline-primary">Yeni Sosyal Medya Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>
