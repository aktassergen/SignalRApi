@model UpdateSosialMediaDto
@{
	ViewData["Title"] = "CreateSosialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Sosyal Medya Girişi</div>
						</div>
						<input type="hidden"asp-for="SocialMediaId" />
						<div class="card-body">
							<div class="form-group">
								<label for="SocialTitle">Başlık Giriniz</label>
								<input type="text" class="form-control" asp-for="SocialTitle" id="SocialTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="SocialIcon">İkon Giriniz</label>
								<input type="text" class="form-control" asp-for="SocialIcon" id="SocialIcon">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="SocialUrl">Link Giriniz</label>
								<input type="text" class="form-control" asp-for="SocialUrl" id="SocialUrl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


