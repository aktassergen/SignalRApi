@model CreateTestimonialDto
@{
	ViewData["Title"] = "CreateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Müşteri Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Müşteri Yorumu Ekleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="TestimonialName">Müşteri Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialName" id="TestimonialName">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="TestimonialTitle">Müşteri Ünvanını Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialTitle" id="TestimonialTitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="TestimonialImageUrl">Müşteri Resim Dosya Yolunu Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialImageUrl" id="TestimonialImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="TestimonialComment">Müşteri Yorumunu Giriniz</label>
								<input type="text" class="form-control" asp-for="TestimonialComment" id="TestimonialComment">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Müşteri Yorumu Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


